            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                <%= yield %>
                </div>
            </div>
      
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
</body>

</html>
