                        <i class="fa fa-user fa-fw"></i>Usuario: <%= current_user.nombre%></i><i class="fa fa-caret-down"></i>
                        <% end %>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                    <% if user_signed_in?%>
                        <li>
                        <%= link_to "Cerrar sesiÃ³n",destroy_user_session_path,method: :delete,class:''%>
