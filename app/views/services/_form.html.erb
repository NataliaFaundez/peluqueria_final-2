<%= form_for (service), :html =>{:class => 'form-horizontal'} do |f| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <div class="form-group">
        <%= f.label :nombre,class: 'col-sm-1 control-label' %>
        <div class="col-sm-5">
          <%= f.text_field :nombre,class:'form-control',placeholder: 'Ingrese Nombre Servicio' %>
        </div>
      </div>
  </div>

  <div class="field">
     <div class="form-group">
        <%= f.label :valor,class: 'col-sm-1 control-label' %>
        <div class="col-sm-5">
          <%= f.number_field :valor,class:'form-control' %>
        </div>
      </div>
  </div>
  <div class="actions">
    <%= f.submit('Enviar',class: 'btn btn-default') %>
  </div>
<% end %>
